<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="India Covid-19 Tracker"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="16dp"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

       <LinearLayout
           android:layout_width="0dp"
           android:gravity="center"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:orientation="vertical">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Confirmed"
               android:textStyle="bold"
               android:textSize="15sp"
               android:textColor="@color/dark_red"/>

           <ImageView
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:src="@drawable/virus"
               app:tint="@color/dark_red" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="5555"
               android:id="@+id/confirmCase"
               android:textStyle="bold"
               android:textSize="15sp"
               android:textColor="@color/dark_red"/>


       </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/dark_blue"/>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/patient"
                app:tint="@color/dark_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5555"
                android:id="@+id/activeCase"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/dark_blue"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recovered"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/dark_green"/>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/heart1"
                app:tint="@color/dark_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5555"
                android:id="@+id/recoveredCase"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/dark_green"/>


        </LinearLayout>

        <LinearLayout

            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deseased"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/dark_yellow"/>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/death1"
                app:tint="@color/dark_yellow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5555"
                android:id="@+id/deathCase"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/dark_yellow"/>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:id="@+id/state"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_weight="2"
            android:textSize="17sp"
            android:text="STATE"
            android:layout_height="wrap_content"
            android:layout_width="0dp" />
        <TextView
            android:id="@+id/confirm"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/dark_red"
            android:textSize="17sp"
            android:text="CFNM"
            android:layout_height="wrap_content"
            android:layout_width="0dp" />

        <TextView
            android:id="@+id/active"
            android:gravity="center"
            android:layout_weight="1"
            android:text="ACTV"
            android:textColor="@color/dark_blue"
            android:textSize="17sp"
            android:layout_height="wrap_content"
            android:layout_width="0dp" />


        <TextView
            android:id="@+id/recover"
            android:gravity="center"
            android:layout_weight="1"
            android:text="RCVR"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:textColor="@color/dark_green"
            android:textSize="17sp"/>


        <TextView
            android:id="@+id/death"
            android:gravity="center"
            android:layout_weight="1"
            android:text="DCSD"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:textColor="@color/dark_yellow"
            android:textSize="17sp"/>



    </LinearLayout>

    <ListView
        android:background="#b3ada2"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:id="@+id/rv"
        />



</LinearLayout>